{
  "uid": "msaas-api-overview",
  "title": "Micro-SaaS API Overview",
  "schemaVersion": 36,
  "version": 1,
  "tags": [
    "micro-saas",
    "api"
  ],
  "timezone": "",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "label": "Datasource",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 0,
        "refresh": 1
      },
      {
        "name": "env",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Environment",
        "query": "label_values(http_server_requests_total, env)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      },
      {
        "name": "service",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Service",
        "query": "label_values(http_server_requests_total, service)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      },
      {
        "name": "route",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Route",
        "query": "label_values(http_server_requests_total, route)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "API Request Rate by Status Code",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_total{env=~\"$env\", service=~\"$service\"}[$__interval])) by (status_code)",
          "legendFormat": "status={{status_code}}",
          "interval": ""
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "API Latency p50 / p95 / p99",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.5, sum(rate(http_server_request_duration_seconds_bucket{env=~\"$env\", service=~\"$service\"}[$__interval])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{env=~\"$env\", service=~\"$service\"}[$__interval])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(http_server_request_duration_seconds_bucket{env=~\"$env\", service=~\"$service\"}[$__interval])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "API Error Rate (5xx / All)",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_total{env=~\"$env\", service=~\"$service\", status_code=~\"5..\"}[$__interval])) / sum(rate(http_server_requests_total{env=~\"$env\", service=~\"$service\"}[$__interval]))",
          "legendFormat": "5xx error rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": false
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 4,
      "type": "table",
      "title": "Top 10 Slowest Routes (p95 latency)",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket{env=~\"$env\"}[5m])) by (le, route)))",
          "legendFormat": "{{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "showHeader": true
      }
    }
  ]
}
