{
  "uid": "msaas-auth-billing",
  "title": "Micro-SaaS Auth & Billing",
  "schemaVersion": 36,
  "version": 1,
  "tags": [
    "micro-saas",
    "auth",
    "billing"
  ],
  "timezone": "",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "label": "Datasource",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 0,
        "refresh": 1
      },
      {
        "name": "env",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Environment",
        "query": "label_values(auth_jwt_invalid_total, env)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      },
      {
        "name": "issuer",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "JWT Issuer",
        "query": "label_values(msaas_jwt_validation_duration_seconds_count, issuer)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      },
      {
        "name": "provider",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Billing Provider",
        "query": "label_values(billing_reconciliation_last_success_timestamp, provider)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "JWT Invalid Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(auth_jwt_invalid_total{env=~\"$env\"}[$__interval])) by (reason) / sum(rate(msaas_jwt_validation_duration_seconds_count{env=~\"$env\"}[$__interval]))",
          "legendFormat": "{{reason}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "JWT Validation Latency p50 / p95 / p99",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.5, sum(rate(msaas_jwt_validation_duration_seconds_bucket{env=~\"$env\", issuer=~\"$issuer\"}[$__interval])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(msaas_jwt_validation_duration_seconds_bucket{env=~\"$env\", issuer=~\"$issuer\"}[$__interval])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(msaas_jwt_validation_duration_seconds_bucket{env=~\"$env\", issuer=~\"$issuer\"}[$__interval])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Age of Last Billing Reconciliation",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "refId": "A",
          "expr": "time() - max(billing_reconciliation_last_success_timestamp{env=~\"$env\", provider=~\"$provider\"})",
          "legendFormat": "age_seconds"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false,
          "fields": ""
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Circuit Breaker State (Stripe & Browser)",
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 10,
        "w": 16,
        "x": 8,
        "y": 8
      },
      "targets": [
        {
          "refId": "A",
          "expr": "circuit_state{env=~\"$env\", breaker_name=\"stripe\"}",
          "legendFormat": "stripe ({{service}})"
        },
        {
          "refId": "B",
          "expr": "circuit_state{env=~\"$env\", breaker_name=\"playwright\"}",
          "legendFormat": "playwright ({{service}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "max": 2
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    }
  ]
}
